{
  "env": {
    "node": true,
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "process": "readonly",
    "module": "readonly",
    "require": "readonly",
    "__dirname": "readonly",
    "__filename": "readonly",
    "exports": "readonly",
    "console": "readonly"
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-empty": ["error", { "allowEmptyCatch": true }],
    "no-undef": "error"
  }
}